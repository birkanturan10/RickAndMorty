@model List<R2>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Episodes</title>
    <!--Bootstrap CDN-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
</head>
<body>
    <!--Navbar-->
    <nav class="navbar bg-body-tertiary" style="background-color:bisque;">
        <div class="container-fluid d-flex justify-content-center">
            <span class="navbar-brand mb-0 h1">Rick And Morty - Characters</span>
        </div>
    </nav>
    <div style="padding:10px;"></div>
    <!--Search Box-->
    <div class="d-flex justify-content-center" style="margin:10px;font-size: 18px;
            font-family: Verdana, Geneva, Tahoma, sans-serif;">
        Search Box:&nbsp;<input type="text" id="myinput" />
    </div>
    <!--Content-->
    <div class="container" style="background-color:bisque;border-radius:25px;">
        <table class="table" style="border:brown;border-radius:25px;">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Character Name</th>
                    <th>Status</th>
                    <th>Species</th>
                    <th>Type</th>
                    <th>Gender</th>
                    <th>Origin</th>
                    <th>Location</th>
                    <th>Image</th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tbody id="myTable">
                    <tr>
                        <th scope="row">@item.id</th>
                        <th scope="row">@item.name</th>
                        <th scope="row">@item.status</th>
                        <th scope="row">@item.species</th>
                        <th scope="row">@item.type</th>
                        <th scope="row">@item.gender</th>
                        <th scope="row">@item.origin.name</th>
                        <th scope="row">@item.location.name</th>
                        <th><img src="@item.image" style="height:150px;width:150px;" /></th>
                    </tr>
                </tbody>
            }
        </table>
    </div>
</body>
</html>

<script>
    $(document).ready(function () {
        $("#myinput").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#myTable tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            })
        })
    })
</script>

